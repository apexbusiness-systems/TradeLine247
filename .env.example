# TradeLine 24/7 Environment Configuration

# Supabase
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=   # from GitHub/CI secrets at runtime

# Email (Resend)
RESEND_API_KEY=              # from secrets

# App base URL
BASE_URL=https://www.tradeline247ai.com

# Twilio (voice/SMS webhooks)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=           # from secrets

# Twilio security
ALLOW_INSECURE_TWILIO_WEBHOOKS=false
NODE_ENV=production

# Feature flags (all features default OFF unless explicitly enabled)
FEATURE_RCS=1
FEATURE_WHATSAPP=0
FEATURE_VOICE_AI=0

# Optional: Analytics
ANALYTICS_WRITE_KEY=

# OmniPort Platform Integration
# TradeLine connects as a client to the OmniPort universal ingress platform
OMNI_PORT_BASE_URL=https://your-omniport-project.supabase.co
OMNI_PORT_SERVICE_KEY=           # from OmniPort platform admin

# Supabase Client (Frontend)
# Get these from your Supabase project settings: https://supabase.com/dashboard/project/_/settings/api
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
